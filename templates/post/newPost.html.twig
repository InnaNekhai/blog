{% extends 'base.html.twig' %}

{% block title %}
    Создание нового поста - {{ parent() }}
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Создайте новый пост</h1>
        <div class="row">
            <div class="col-xs-12 col-md-6">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <button type="submit" class="btn btn-primary btn-md btn-block">Сохранить</button>
                {{ form_end(form) }}<br>
                <a href="{{ path("homepage") }}"><button class="btn btn-secondary btn-md btn-block">Вернуться на главную</button></a>
            </div>
        </div>
    </div>
{% endblock %}
